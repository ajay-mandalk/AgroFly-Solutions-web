<!-- Responsive Navbar using only Astro + Tailwind -->
<header class="w-full px-4 sm:px-8 py-3 bg-[#0F1A12] border-2 border-[#03D47C] rounded-sm">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center gap-3">
        <div class="w-6 h-6 bg-no-repeat bg-cover bg-center rounded-sm" style="background-image: url('/icons/agrofly-icon.png');"></div>
        <h1 class="text-[#03D47C] font-bold text-lg font-sora">Agrofly.in</h1>
      </div>
  
      <!-- Hamburger + Mobile Menu using <details> -->
      <details class="md:hidden relative group">
        <!-- Toggle Button -->
        <summary class="list-none cursor-pointer p-2 rounded-md border border-[#03D47C] text-[#03D47C] hover:bg-[#03D47C]/10 transition">
          <!-- Hamburger Icon (Shown when closed) -->
          <svg
            class="w-6 h-6 block group-open:hidden"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>

          <!-- X Icon (Shown when open) -->
          <svg
            class="w-6 h-6 hidden group-open:block"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </summary>

        <!-- Mobile Menu -->
        <nav class="absolute right-0 top-full mt-2 w-64 bg-[#0F1A12] border-l-2 border-[#03D47C] rounded-md p-4 shadow-lg z-50 flex flex-col gap-4 text-white font-sora">
          <a href="#about-us" class="hover:underline">About</a>
          <a href="#team" class="hover:underline">Team</a>
          <a href="#how-it-work" class="hover:underline">How It Works</a>
          <a href="#join" class="bg-[#E8F2ED] text-[#0F1A12] font-bold px-4 py-2 rounded-xl text-sm hover:scale-105 transition">Join us as Volunteer</a>
        </nav>
      </details>
  
      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-8 text-white text-sm font-medium font-sora">
        <a href="#about-us" class="hover:underline">About</a>
        <a href="#team" class="hover:underline">Team</a>
        <a href="#how-it-work" class="hover:underline">How It Works</a>
        <a href="#join" class="bg-[#E8F2ED] text-[#0F1A12] font-bold px-4 py-2 rounded-xl text-sm hover:scale-105 transition">Join Us</a>
      </nav>
    </div>
  </header>
  