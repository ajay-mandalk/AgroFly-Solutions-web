---
import Link from "@/components/shared/Link.astro";
import Container from "../shared/Container.astro";
import { Meteors } from "@/components/ui/meteors";
import VelocityAnnouncement from "@/components/Announcement/VelocityAnnoucer.astro";
---

<main
  class="relative w-full bg-gradient-to-b from-slate-300 to-slate-900 overflow-hidden isolate"
>
  <!-- Background Gradient -->
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-br from-slate-900 to-slate-300 opacity-20"
  >
  </div>
  <!-- Background Stars -->
  <div class="absolute inset-0 -z-20 opacity-20"></div>
  <!-- Background Meteors -->
  <Meteors client:load number={30} />

  <Container
    className="flex w-full lg:w-auto  justify-between flex-col items-center relative z-10 py-8 md:py-16"
  >
    <div class="text-center max-w-3xl mx-auto">
      <h1
        class="py-2 text-4xl lg:text-6xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-lime-100 to-lime-300"
      >
        Drone Farming <br /> & <br /> Spraying Drone Solutions
      </h1>

      <p
        class="text-lg mt-4 font-semibold text-gray-500/90 max-w-xl mx-auto leading-relaxed bg-gradient-to-r from-lime-100 to-lime-300"
      >
        Efficient, precise, and sustainable farming solutions.
      </p>

      <div class="mt-10 flex flex-wrap gap-4 justify-center">
        <Link
          href="https://afeigzuaza1.typeform.com/to/EUuNVQNA"
          target="_blank"
          size="lg"
          class="w-full sm:w-auto flex-1 relative group overflow-hidden rounded-lg bg-white/10 hover:bg-white/20 backdrop-blur-sm transition-all duration-300 px-4 py-2 sm:px-6 sm:py-3 md:px-8 md:py-3"
          rel="noopener"
        >
          <span
            class="relative z-10 text-white font-medium text-sm sm:text-base md:text-lg"
            >Take a Survey</span
          >
          <div
            class="absolute inset-0 bg-gradient-to-r from-blue-500/40 to-lime-200/40 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </Link>

        <Link
          size="lg"
          href="/#"
          class="w-full sm:w-auto flex-1 relative group overflow-hidden rounded-lg border border-white/20 hover:border-white/40 transition-all duration-300 px-4 py-2 sm:px-6 sm:py-3 md:px-8 md:py-3"
          target="_blank"
          rel="noopener"
        >
          <span
            class="relative z-10 text-gray-500 font-medium text-sm sm:text-sm md:text-lg"
            >Become a Partner</span
          >
          <div
            class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </Link>
      </div>
    </div>

  </Container>
  <div class=" text-center text-sm text-gray-500/90 bg-gradient-to-r from-gray-100 to-gray-300 bg-clip-text font-semibold"></div>
  <VelocityAnnouncement  />
</div>

 
</main>
