---
import { motion } from "framer-motion";
const testimonials = [
  {
    name: "Hugo Adams",
    role: "Content Creator", 
    image: "https://cdn.builder.io/api/v1/image/assets/TEMP/c76b37ef68a458f9a6d68ef67546e6772ab9efb7ee32c42206fd2bbf2d39d492",
    text: "With high resolution camera, picture become clear and beautiful. It's so easy to operate drone.",
    animation: { x: -50, delay: 0.2 }
  },
  {
    name: "Jennie Obrien",
    role: "Director Film",
    image: "https://cdn.builder.io/api/v1/image/assets/TEMP/09ae3d14db87d926ec95bd70a8b5789a956e6aa39295711b395ec175bd1fd2c7", 
    text: "Taking high view video become easy and faster. Battery performance really helping for making film.",
    animation: { y: 50, delay: 0.4 }
  },
  {
    name: "Lisa Millz",
    role: "Content Creator",
    image: "https://cdn.builder.io/api/v1/image/assets/TEMP/56a6afaf27463c1234dc36451ef3f04d087ccd57ee16b38e47852a63079426a4",
    text: "Making video content for my trip vlog so powerful and wonderful. Love the video quality.",
    animation: { x: 50, delay: 0.6 }
  }
];
---

<section class="flex flex-col rounded-none py-16">
    <h2 class="self-start text-6xl font-semibold leading-[104px] text-neutral-800 max-md:max-w-full max-md:text-4xl max-md:leading-[72px]">
        What Our Pilots <br /> Are Saying
    </h2>

    <div class="mt-20 w-full max-md:mt-10 max-md:max-w-full">
        <div class="flex gap-5 max-md:flex-col">
            {testimonials.map((testimonial) => (
                <article class="flex flex-col w-[33%] max-md:ml-0 max-md:w-full">
                    <div class="flex flex-col p-8 w-full rounded-xl border border-solid border-neutral-200 hover:shadow-lg transition-shadow duration-300 max-md:px-5 max-md:mt-10">
                        <div class="flex gap-1 mb-4">
                            {Array(5).fill(null).map(() => (
                                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                            ))}
                        </div>
                        <p class="text-base font-light leading-8 text-neutral-800">
                            {testimonial.text}
                        </p>
                        <div class="flex gap-8 self-start mt-8">
                            <img 
                                loading="lazy" 
                                src={testimonial.image} 
                                alt={testimonial.name} 
                                class="object-cover w-[70px] h-[70px] rounded-full" 
                            />
                            <div class="flex flex-col my-auto">
                                <h3 class="text-xl font-semibold text-neutral-800">{testimonial.name}</h3>
                                <p class="text-lg font-light text-zinc-500">{testimonial.role}</p>
                            </div>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>