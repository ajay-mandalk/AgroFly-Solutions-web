---
import { Button } from "../ui/button";
---

<section class="py-12 md:py-8 overflow-hidden">
  <div class="flex flex-col items-center">
    <div class="relative w-full mt-10">
      <div
        class="flex gap-2 md:gap-2 overflow-x-auto pb-8 snap-x snap-mandatory scrollbar-hide justify-center md:justify-start"
      >
        {/* Single Card Template */}
        <article class="flex-none w-[350px] snap-center">
          <div
            class="flex flex-col h-full p-6 rounded-2xl border border-neutral-200 bg-white shadow-sm hover:shadow-md transition-shadow"
          >
            <div class="relative aspect-square rounded-xl overflow-hidden mb-6">
              <img
                src="https://cdn.builder.io/api/v1/image/assets/TEMP/dbf3a50675f200962f93664ecb00b236739bbd12be7409abfb28af829e9e2ca7"
                alt="Mini Drone"
                class="object-cover w-full h-full hover:scale-105 transition-transform duration-300"
              />
              <span
                class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-medium"
              >
                Best Value
              </span>
            </div>
            <h3 class="text-2xl font-semibold text-neutral-800">Mini Drone</h3>
            <p class="mt-2 text-zinc-600 text-sm leading-relaxed flex-grow">
              Perfect for small to medium farms. Features 4K camera with
              automated optimization for precise crop monitoring.
            </p>
            <div class="mt-6 space-y-4">
              <div class="flex justify-between items-center text-sm">
                <span class="text-zinc-600">Coverage</span>
                <span class="font-medium">Up to 50 acres/hour</span>
              </div>
              <div class="flex justify-between items-center text-sm">
                <span class="text-zinc-600">Price per acre</span>
                <span class="font-medium text-green-600">$2.50</span>
              </div>
              <Button
                className="w-full mt-4 bg-green-600 text-white hover:bg-green-700 transition-colors"
              >
                Book Now
              </Button>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>
